#include <stdio.h>

int is_symmetric(int *vector, int start, int end) {
    if (start >= end)
        return 1;
    else if (vector[start] != vector[end])
        return 0;
    else
        return is_symmetric(vector, start + 1, end - 1);
}

int main() {
    int vector[] = {1, 2, 3, 2, 1};
    int n = sizeof(vector) / sizeof(vector[0]);
    if (is_symmetric(vector, 0, n - 1))
        printf("The vector is symmetric.\n");
    else
        printf("The vector is not symmetric.\n");
    return 0;
}
